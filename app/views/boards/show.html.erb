
<div>
   <h1>
     <%= @the_board.name %>
   </h1>

</div>
<hr>
<h2>
  Add a new post
</h2>

<form action="/insert_post" method = "post">
  <div>
    <label for="title_box">Title</label>
    <input type="text" id="title_box" name="query_title">
  </div>
  <div>
    <label for="body_box">Body</label>
    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>
  <div>
    <label for="expire_box">Expires on</label>
    <input type="date" id="expire_box" name="query_expiration">
  </div>
    <label for="board_id_box"></label>
    <input type="hidden" id="board_id_box" name="query_board_id" value=<%=@the_board.id%>>
  <div>
  <button>Add post</button>
</form>
<hr>
<h2>Active posts</h2>
<table border=1>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>
  <%@posts.each do |post|%>
    <tr>
      <td><%=post.title%></td>
      <td><%=post.body%></td>
      <td><%=post.created_at%></td>
      <td><%=post.updated_at%><td>
    </tr>
  <%end%>


</table>
      