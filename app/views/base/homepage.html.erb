<h1>All boards</h1>
<hr>
<h2>Add a new board</h2>
<form action="/insert_board" method="post">
<div>
  <label for="board_name_box">Name</label>
  <input type="text" id="name_box" name = "query_name" >
</div>
<div>
  <button>Add board</button>
</div>
<hr>

<ul>
  <% @list_of_boards.each do |board| %>
  <li><a href="/boards/<%=board.id%>"><%=board.name%></a></li>
  <%end%>

</ul>
